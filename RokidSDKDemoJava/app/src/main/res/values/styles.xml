<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/base_color</item>
        <item name="colorPrimaryDark">@color/base_statusBar_light_bg</item>

        <item name="android:editTextStyle">@style/Widget.App.EditText</item>
        <item name="android:textViewStyle">@style/Widget.App.TextView</item>
        <item name="android:buttonStyle">@style/Widget.App.Button</item>
        <item name="android:alertDialogTheme">@style/Widget.App.Alert</item>
    </style>

    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/base_content</item>
        <item name="colorControlActivated">@color/base_color</item>
    </style>

    <style name="Widget.App.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/base_content</item>
    </style>

    <style name="Widget.App.Button" parent="android:Widget.Button">
        <item name="android:textColor">@color/base_statusBar_light_bg</item>
        <item name="android:background">@drawable/base_btn_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.App.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/base_color</item>
    </style>

</resources>
