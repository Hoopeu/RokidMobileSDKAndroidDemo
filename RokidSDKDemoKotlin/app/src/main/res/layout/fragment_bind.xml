<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/fragment_bind_blename_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入蓝牙前缀"
            android:text="Rokid-Pebble"/>

        <Button
            android:id="@+id/fragment_bind_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="扫描"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_bind_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/fragment_bind_wifiname_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入wifi名字"/>

    <EditText
        android:id="@+id/fragment_bind_wifipwd_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入wifi密码"/>

    <Button
        android:id="@+id/fragment_bind_send_data_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="绑定"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

</LinearLayout>