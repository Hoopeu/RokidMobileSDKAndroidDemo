<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/skill_titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/base_statusBar_light_bg"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/skill_titlebar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="返回"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/skill_titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="智能家居"
            android:textColor="@color/base_titleBar_light_content"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/skill_titlebar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="关闭"
            android:textColor="@color/base_titleBar_light_right_enable"
            android:visibility="gone"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#AAAAAA"/>

    </RelativeLayout>

    <com.rokid.mobile.sdk.demo.skill.webkit.SkillWebview
        android:id="@+id/skill_homebase_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/skill_titlebar"/>

</RelativeLayout>